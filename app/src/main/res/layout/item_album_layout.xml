<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/thumbnail_album"
        android:layout_width="match_parent"
        android:layout_height="96dp"
        android:src="@drawable/ic_mq2tra01"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/title_album"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:maxLines="1"
        android:text="Album name album name"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/thumbnail_album"
        app:layout_constraintStart_toStartOf="@+id/thumbnail_album"
        app:layout_constraintTop_toBottomOf="@+id/thumbnail_album" />

    <TextView
        android:id="@+id/total_song"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="123 songs"
        app:layout_constraintStart_toStartOf="@+id/title_album"
        app:layout_constraintTop_toBottomOf="@+id/title_album" />

</androidx.constraintlayout.widget.ConstraintLayout>