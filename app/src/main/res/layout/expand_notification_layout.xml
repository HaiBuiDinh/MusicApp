<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/notification_content"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:padding="10dp">


    <ImageView
        android:id="@+id/im_notification_custom"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_next" />

    <LinearLayout
        android:id="@+id/ll_notification_custom"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center_vertical"
        android:layout_toRightOf="@id/im_notification_custom"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/noti_expand_song_name"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_gravity="center_vertical"
            android:paddingLeft="10dp"
            android:singleLine="true"
            android:text="TextView"
            android:textStyle="bold"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/noti_expand_artis"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:singleLine="true"
            android:text="TextView"
            android:textSize="14sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/noti_expand_previous"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentStart="true"
                android:clickable="true"
                android:focusable="true"
                android:padding="10dp"
                android:src="@drawable/ic_previous" />

            <ImageView
                android:id="@+id/noti_expand_play"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:clickable="true"
                android:padding="10dp"
                android:focusable="true"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_play" />

            <ImageView
                android:id="@+id/noti_expand_next"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentEnd="true"
                android:clickable="true"
                android:focusable="true"
                android:padding="10dp"
                android:src="@drawable/ic_next" />

        </RelativeLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/noti_expand_delete"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="bottom"
        android:clickable="true"
        android:focusable="true"
        android:padding="16dp"
        android:src="@android:drawable/ic_delete" />


</LinearLayout>
