<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginVertical="16dp"
    android:paddingBottom="16dp"
    android:paddingTop="8dp"
    android:paddingHorizontal="8dp"
    android:layout_marginEnd="16dp"
    android:background="@drawable/backround_item_album">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/thumbnail_album"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:background="@drawable/backround_item_album"
        android:src="@drawable/ic_launcher_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/title_album"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:maxLines="1"
        android:text="Album name album name"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/thumbnail_album"
        app:layout_constraintStart_toStartOf="@+id/thumbnail_album"
        app:layout_constraintTop_toBottomOf="@+id/thumbnail_album" />

    <TextView
        android:id="@+id/total_song"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="123 songs"
        app:layout_constraintStart_toStartOf="@+id/title_album"
        app:layout_constraintTop_toBottomOf="@+id/title_album" />

</androidx.constraintlayout.widget.ConstraintLayout>

